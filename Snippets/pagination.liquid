{% if paginate.pages > 1 %}
    <nav aria-label="Page navigation">
      <ul class="pagination justify-content-center"> <!-- _____pagination location_______ -->
        {% if paginate.previous.is_link %} <!-- _____previous link_______ -->
          <li class="page-item"><a href="{{ paginate.previous.url }}" class="page-link">{{ paginate.previous.title }}</a></li>
        {% endif %}
        
        {% for part in paginate.parts %} <!-- _____paginate every page_______ -->
          {% if part.is_link %}
            <li class="page-item"><a href="{{ part.url }}" class="page-link">{{ part.title }}</a></li> <!-- _____create link to page_______ -->
          {% else %}
            <li class="page-item disabled"><a href="{{ part.url }}" class="page-link">{{ part.title }}</a></li> <!-- _____disable if on this page_______ -->
          {% endif %}
        {% endfor %}
        {% if paginate.next.is_link %} <!-- _____next page link_______ -->
          <li class="page-item"><a href="{{ paginate.next.url }}" class="page-link">{{ paginate.next.title }}</a></li>
        {% endif %}
      </ul>
    </nav>
  {% endif %}